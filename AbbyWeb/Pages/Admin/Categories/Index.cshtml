@page
@model AbbyWeb.Pages.Admin.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
         <div class="col-6 text-end">
             <a asp-page ="Create" class ="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Create New Category</a>
        </div>
        <br/> <br/>
      
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th class="w-25"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <div class="w-10 btn-group" role="group">
                                <a asp-page="Edit" asp-route-categoryId ="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="Delete" asp-route-categoryId ="@category.Id" class="btn btn-outline-danger mx-2"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

