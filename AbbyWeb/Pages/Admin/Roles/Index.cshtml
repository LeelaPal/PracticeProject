@page
@model AbbyWeb.Pages.Admin.Roles.IndexModel
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Create New Role</a>
        </div>
        <br /> <br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th class="w-25"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.Name</td>
                        
                        <td>
                            <div class="w-10 btn-group" role="group">
                                <a asp-page="Edit" asp-route-roleId="@role.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="Delete" asp-route-roleId="@role.Id" class="btn btn-outline-danger mx-2"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
