@page
@model AbbyWeb.Pages.Admin.Roles.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class ="row pb-3">
        <h2 class="text-primary pl-3">Create Role</h2>
        <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-4">
            <label asp-for="@Model.Role.Name"></label>
            <input  asp-for="@Model.Role.Name" class="form-control" />
            <span asp-validation-for="@Model.Role.Name" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        <a asp-page="index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}