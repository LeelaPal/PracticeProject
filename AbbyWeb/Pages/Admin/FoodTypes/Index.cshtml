@page
@model AbbyWeb.Pages.Admin.FoodTypes.IndexModel
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Food Type List</h2>
        </div>
         <div class="col-6 text-end">
             <a asp-page ="Create" class ="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; Create New Food Type</a>
        </div>
        <br/> <br/>
      
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Food Type Name</th>
                    <th class="w-25"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.FoodTypes != null)
                {
                    foreach (var foodType in Model.FoodTypes)
                    {
                        <tr>
                            <td>@foodType.Name</td>
                            <td>
                                <div class="w-10 btn-group" role="group">
                                    <a asp-page="Edit" asp-route-foodTypeId="@foodType.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                                    <a asp-page="Delete" asp-route-foodTypeId="@foodType.Id" class="btn btn-outline-danger mx-2"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
