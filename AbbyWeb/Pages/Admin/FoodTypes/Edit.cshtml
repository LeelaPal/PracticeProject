@page
@model AbbyWeb.Pages.Admin.FoodTypes.EditModel

<form method="post">
    <input type="hidden" asp-for ="@Model.FoodType.Id" />
    <div class="border p-3 mt-4">
        <div class ="row pb-3">
        <h2 class="text-primary pl-3">Edit Food Type</h2>
        <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-4">
            <label asp-for="@Model.FoodType.Name"></label>
            <input asp-for="@Model.FoodType.Name" class="form-control" />
            <span asp-validation-for="@Model.FoodType.Name" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-page="index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}